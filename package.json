{
  "name": "user-admin-simplifier",
  "version": "3.0.0",
  "description": "Lets any Administrator simplify the WordPress Admin interface, on a per-user basis, by turning specific menu/submenu sections off.",
  "main": "index.js",
  "scripts": {
    "build": "webpack --mode production",
    "dev": "webpack --mode development --watch",
    "lint": "eslint src/",
    "test:php": "php tests/test-menu-name-cleaning.php",
    "phpstan": "php vendor/bin/phpstan analyse",
    "serve": "http-server . -p 8080 -c-1 --silent",
    "env:start": "wp-env start",
    "env:stop": "wp-env stop",
    "env:clean": "wp-env clean",
    "env:reset": "wp-env clean all && wp-env start",
    "test:e2e": "TEST_TYPE=e2e playwright test",
    "test:e2e:headed": "TEST_TYPE=e2e playwright test --headed",
    "test:e2e:ui": "TEST_TYPE=e2e playwright test --ui",
    "test:e2e:debug": "TEST_TYPE=e2e playwright test --debug",
    "test:e2e:report": "playwright show-report test-results/html",
    "test:visual": "TEST_TYPE=visual playwright test",
    "test:visual:ui": "TEST_TYPE=visual playwright test --ui",
    "test:visual:update": "TEST_TYPE=visual playwright test --update-snapshots",
    "test": "npm run test:php && npm run test:e2e"
  },
  "keywords": [
    "wordpress",
    "plugin",
    "admin",
    "menu"
  ],
  "author": "Adam Silverstein",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@babel/preset-react": "^7.23.0",
    "@playwright/test": "^1.57.0",
    "@wordpress/env": "^10.36.0",
    "babel-loader": "^9.1.3",
    "css-loader": "^6.8.1",
    "eslint": "^8.51.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "http-server": "^14.1.1",
    "mini-css-extract-plugin": "^2.7.6",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
